@model XOVO.Models.Message

@{
    ViewBag.Title = "Fehler";
    Layout = "~/Views/Shared/Layout_login_registration.cshtml";
}


    <h4 class="white-text">@Model.Header</h4>
    @if (Model.AdditionalHeader?.Trim() != "")
    {
        <h5 class="white-text">@Model.AdditionalHeader</h5>
    }
    <p class="white-text">
        @Model.MessageText
    </p>
    @if (Model.Solution?.Trim() != "")
    {
        <p class="white-text">@Model.Solution</p>
    }
    <div>
    <a class="waves-effect waves-light btn" href="/user/login"><i class="material-icons left">arrow_back</i>Zurück</a>
    </div>



