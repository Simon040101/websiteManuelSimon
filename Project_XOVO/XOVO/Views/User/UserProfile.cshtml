@using XOVO.Models

@{
    ViewBag.Title = "Profil";
    string color = Request.Cookies["layout_color"] != null ? Request.Cookies["layout_color"].Value.ToString() : "cyan";
    string profilepic = Session["Profilepic"] != null ? Convert.ToString(Session["Profilepic"]) : "/Content/img/placeholder.png";
    string username = Convert.ToString(Session["Username"]);

    User user = (User)Session["User"];
}

<div id="profile-page-header" class="card">
    <div class="card-image waves-effect waves-block waves-light">
        <img class="activator" src="~/Content/img/background_login_registration.jpg">
    </div>
    <figure class="card-profile-image">
        <img src="@profilepic" class="circle z-depth-2 responsive-img activator">
    </figure>
    <div class="card-content">
        <div class="row">
            <div class="col s3 offset-s2">
                <h4 class="card-title grey-text text-darken-4">@user.Firstname @user.Lastname</h4>
                <p class="medium-small grey-text">Person</p>
            </div>
            <div class="col s2 center-align">
                <h4 class="card-title grey-text text-darken-4">@user.Email</h4>
                <p class="medium-small grey-text">EMail</p>
            </div>
            <div class="col s2 center-align">
                <h4 class="card-title grey-text text-darken-4">@user.Username</h4>
                <p class="medium-small grey-text">Benutzername</p>
            </div>
            <div class="col s1 right-align">
                <a class="btn-floating activator waves-effect waves-light darken-2 right">
                    <i class="mdi-action-perm-identity"></i>
                </a>
                <p class="medium-small grey-text">Als Freund hinzufügen</p>
            </div>
        </div>
    </div>
</div>


@if ((Model == null) || (Model.Count == 0))
{
    <p>Der User hat zurzeit keine Feeds!</p>
}
else
{
    <div id="card">
        @foreach (FeedItem fi in Model)
        {
            @Html.Partial("FeedItem", fi)
        }
    </div>
}

