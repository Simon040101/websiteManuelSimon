@model List<XOVO.Models.User>
@using XOVO.Models
@{
    ViewBag.Title = "UserManagement";
}
<h4>Benutzerverwaltung</h4>
<div class="row">
    <div class="col s12 m6">
        <div class="card blue-grey darken-1 hoverable">
            <div class="card-content white-text">
                <span class="card-title">Achtung - nur für Admins</span>
                <p>
                    Sie befinden sich hier bei der Benutzerverwaltung! Hier ist es möglich Benutzer zu sperren (können sich anschließend nicht mehr anmelden)
                    und man kann auch Benutzer komplett löschen! Im folgenden Nachname und Vorname Feld besteht die Möglichkeit nach dem gewünschten Benutzer
                    zu suchen
                </p>
            </div>
        </div>
    </div>
</div>

<div class="input-field col s6">
    <input id="lastname" type="text" class="validate">
    <label for="lastname">Nachname</label>
</div>
<div class="input-field col s6">
    <input id="firstname" type="text" class="validate">
    <label for="firstname">Vorname</label>
</div>
<a class="waves-effect waves-light btn red">Suchen</a>

@if ((Model != null) && (Model.Count > 0)){

    <table class="striped center responsive-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Vorname</th>
                <th>Nachname</th>
                <th>Geburtsdatum</th>
                <th>Geschlecht</th>
                <th>Benutzername</th>
                <th>Email</th>
                <th>Löschen</th>
                <th>Sperren</th>
            </tr>
        </thead>

        <tbody>
           @foreach (User a in Model)
           {
            <tr>
                <td>@a.ID</td>
                <td>@a.Firstname</td>
                <td>@a.Lastname</td>
                <td>@(a.Birthdate.ToLongDateString())</td>
                <td>@a.Gender</td>
                <td>@a.Username</td>
                <td>@a.Email</td>

                <td><a class="btn-floating btn-large waves-effect waves-light red" href="/user/delete/@a.ID"><i class="material-icons">delete</i></a></td>
                <td><a class="btn-floating btn-large waves-effect waves-light red" href="/user/lockuser/@a.ID">
                    @if (a.IsLocked)
                    {
                        <i class="material-icons">lock</i>
                    }
                    else
                    {
                        <i class="material-icons">lock_open</i>
                    }
                    </a></td>

</tr>


           }
        </tbody>
    </table>
}
else
{
    <p>Es sind keine registrierten Benutzer vorhanden</p>
}
