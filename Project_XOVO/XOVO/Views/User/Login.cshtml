@model XOVO.Models.User
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/Layout_login_registration.cshtml";
}

@using (Html.BeginForm())
{
<div class="card">
    <div class="card-content">
        <div>
        <span class="card-title">Login</span>
        <form>
            <div class="input-field">
                <input type="text" id="usrname" />
                <label for="usrname">Benutzername</label>
            </div>
            <div class="input-field">
                <input type="password" id="pwd" />
                <label for="pwd">Passwort</label>
            </div>
        </form>
    </div>
        <p>Wenn sie noch kein Konto haben, klicken sie hier um sich zu registrieren!</p>
    <div class="card-action">
        <button class="btn waves-effect waves-light" type="submit" name="action">
            Login
            <i class="material-icons right">send</i>
        </button>

    </div>
    </div>
</div>

}