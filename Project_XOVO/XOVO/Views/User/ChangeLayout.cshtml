@model XOVO.Models.User
@{
    ViewBag.Title = "Design ändern";
}

@using (Html.BeginForm())
{
    <div class="card hoverable">
        <div class="card-content">
            <div>
                <span class="card-title">Layout ändern</span>
                <form>
                    <div class="input-field">
                        <select class="icons" name="Layout_color">
                            <option value="" disabled selected>Wählen Sie die Farbe</option>
                            <option value="red" data-icon="" class="left">Rot</option>
                            <option value="green" data-icon="" class="left">Grün</option>
                            <option value="cyan" data-icon="" class="left">Blau</option>
                            <option value="orange" data-icon="" class="left">Orange</option>
                            <option value="black" data-icon="" class="left">Schwarz</option>
                        </select>
                    </div>

                    <div class="input-field">
                        <input id="id"name="ID" type="text" class="validate">
                        <label for="id">ID</label>
                    </div>

                    <div class="input-field">
                        <select class="icons" name="Background_login">
                            <option value="" disabled selected>Wählen Sie Ihren Hintergrund</option>
                            <option value="/Content/img/background_login_registration.jpg" data-icon="/Content/img/background_login_registration.jpg">Hintergrund 1</option>
                            <option value="/Content/img/background_login_registration2.jpg" data-icon="/Content/img/background_login_registration2.jpg">Hintergrund 2</option>
                            <option value="Bild 3" data-icon="/Content/img/background_login_registration2.jpg">Hintergrund 3</option>
                            <option value="Bild 4" data-icon="/Content/img/background_login_registration2.jpg">Hintergrund 4</option>
                            <option value="Bild 5" data-icon="/Content/img/background_login_registration2.jpg">Hintergrund 5</option>
                        </select>
                    </div>

                    <button class="btn waves-effect waves-light" type="submit" name="action">
                        Speichern
                        <i class="material-icons right">save</i>
                    </button>
                    </form>
                <div class="card-action">
                    

            </div>
        </div>
    </div>
    </div>



}