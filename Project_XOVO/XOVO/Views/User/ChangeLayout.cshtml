@model XOVO.Models.User
@{
    ViewBag.Title = "Design ändern";
}

@using (Html.BeginForm())
{
    <div class="card hoverable">
        <div class="card-content">
            <div>
                <span class="card-title">Layout ändern</span>
                <form>
                    <div class="input-field">
                        <select name="layout_color">
                            <option value="" disabled selected>Wählen Sie Ihre Farbe</option>
                            <option value="red">Rot (Standart)</option>
                            <option value="blue">Blau</option>
                            <option value="orange">Orange</option>
                            <option value="yellow">Gelb</option>
                            <option value="black">Schwarz</option>
                            <option value="green">Grün</option>
                        </select>
                    </div>

                    <div class="input-field">
                        <select class="icons" name="Background_login">
                            <option value="" disabled selected>Wählen Sie Ihren Hintergrund</option>
                            <option value="/Content/img/background_login_registration.jpg" data-icon="/Content/img/background_login_registration.jpg">Hintergrund 1</option>
                            <option value="/Content/img/background_login_registration2.jpg" data-icon="/Content/img/background_login_registration2.jpg">Hintergrund 2</option>
                            <option value="/Content/img/background_login_registration3.jpg" data-icon="/Content/img/background_login_registration3.jpg">Hintergrund 3</option>
                            <option value="/Content/img/background_login_registration4.jpg" data-icon="/Content/img/background_login_registration4.jpg">Hintergrund 4</option>
                            <option value="/Content/img/background_login_registration5.jpg" data-icon="/Content/img/background_login_registration5.jpg">Hintergrund 5</option>
                            <option value="/Content/img/background_login_registration6.jpg" data-icon="/Content/img/background_login_registration6.jpg">Hintergrund 6</option>
                        </select>
                    </div>

                    <button class="btn waves-effect waves-light" type="submit" name="action">
                        Speichern
                        <i class="material-icons right">save</i>
                    </button>
                    </form>
                <div class="card-action">
                    

            </div>
        </div>
    </div>
    </div>



}